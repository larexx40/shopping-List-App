<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>LIST</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="/send_url.js"></script>
  </head>
  <body>
    <header>
      <a href="/" class="header-logo">LIST</a>
    </header>
    <div class="container">
      <div class="container-header">
        <h1>Edit Item</h1>
      </div>
      <div class="item-form-wrapper">
        <p class="form-label">Item</p>
        <form action="/update/<%= item.id %>" method="post">
          <div class="item-data row">
            <div class="new-name-column"><span>Name</span></div>
            <div class="new-name-input-column">
              <input type="text" name="itemName" value="<%= item.name %>">
            </div>
          </div>
          <div class="item-data row">
            <div class="new-quantity-column"><span>Quantity</span></div>
            <div class="new-quantity-input-column">
              <input type="text" name="itemQuantity" value="<%= item.quantity %>">
            </div>
          </div>
          <div class="item-data row">
            <div class="new-quantity-column"><span>Budget Price</span></div>
            <div class="new-quantity-input-column">
              <input type="number" name="itemPrice" value="<%= item.price %>">
            </div>
          </div>
          <input action="post" method="" type="submit" value="Add">
        </form>
      </div>
      <a href="/index" class="cancel-button">Go back</a>
    </div>
  </body>
</html>