<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>LIST</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="/send_url.js"></script>
  </head>
  <body>
    <header>
      <a href="/" class="header-logo">LIST</a>
    </header>
    <div class="container">
      <div class="container-header">
        <h1>Shopping List</h1>
        <a href="/new" class="new-button">+ Add item</a>
      </div>
      <div class="index-table-wrapper">
        <div class="table-head">
          <span class="id-column">ID</span>
          <span>Item</span>
        </div>
        <ul class="table-body">
          <% const items={id: 8, name: "Apple", quantity: 9} %>
            <li>
              <div class="item-data">
                <span class="id-column"><%= items.id %></span>
                <span class="name-column"><%= items.name %></span>
                <span class="name-column"><%= items.quantity %></span>
              </div>
              <div class="item-menu">
                <form action="" method="post">
                  <input type="submit" value="Delete">
                </form>
                <a href="/edit/">Edit</a>
              </div>
            </li>
          
        </ul>
      </div>
    </div>
  </body>
</html>