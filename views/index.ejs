<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>LIST</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="/send_url.js"></script>
  </head>
  <body>
    <header>
      <a href="/" class="header-logo">LIST</a>
    </header>
    <div class="container">
      <div class="container-header">
        <h1>Shopping List</h1>
        <a href="/new" class="new-button">+ Add item</a>
      </div>
      <div class="index-table-wrapper">
        <div class="table-head">
          <span class="id-column">ID</span>
          <span class="name-column">Item</span>
          <span class="quantity-column">Quantity</span>
          <span class="price-column">Budget Price</span>
        </div>
        <ul class="table-body">
          <% items.forEach((item)=>{ %>
            <li>
              <div class="item-data row">
                <div class="id-column"><%= item.id %></div>
                <div class="name-column"><%= item.name %></div>
                <div class="quantity-column"><%= item.quantity %></div>
                <div class="price-column"><%= item.price %></div>
              </div>
              <div class="item-menu">
                <form action="" method="post">
                  <input type="submit" value="Delete">
                </form>
                <a href="/edit/">Edit</a>
              </div>
            </li>
          <% }); %>
            
        </ul>
      </div>
    </div>
  </body>
</html>